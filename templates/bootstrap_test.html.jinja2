<!doctype html>

<html>

   <head>
     <title>My Homepage</title>
	 <meta name="viewport" content="width=device-width, initial-scale=1"> <!--specifies sizing-->
	 <link rel="stylesheet" href="static/bootstrap.css">
	 <link rel="stylesheet" href="static/bootstrap_style.css">
	 <script src="static/jquery-3.5.1.js">
	 </script>
	 <script>

		// Stop alert changes background to green mouse enters
		$(document).ready(function(){
			$(".alert").mouseenter(function(){
				$(this).css("background-color", "lightgreen");
				console.log("background changed");
			})
		})
		// Stop alert changes background to green when mouse enters

		// Stop alert changes background back to red when mouse exits
		$(document).ready(function(){
			$(".alert").mouseleave(function(){
				$(this).css("background-color", "MistyRose");
				console.log("background changed");
			})
		})
		// Stop alert changes background back to red when mouse exits

		// interval
		var myVar = setInterval(setColor, 50);

		function setColor() {
			var x = document.body;
			x.style.backgroundColor = x.style.backgroundColor == "aquamarine" ? "LightGreen" : "aquamarine";
		}

		function stopColor() {
			clearInterval(myVar);
		}

		$(document).ready(function(){
			$("button").click(function(){
				var txt1 = "<a href='https://www.youtube.com/watch?v=dQw4w9WgXcQ'>Fine.</a>";
				 $("#surprise-link").append(txt1);
			})
		})

	 </script>
	 <style>
	 .center {
	 text-align: center;
	 }
	 </style>
   </head>

<body>
